<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="differential_swerve_bot">
  <xacro:property name="wheel_radius" value="0.03"/>
  <xacro:property name="wheel_width" value="0.02"/>
  <xacro:property name="body_radius" value="0.0925"/>
  <xacro:property name="body_height" value="0.1"/>
  <xacro:property name="lidar_height" value="0.19"/>

  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="${body_radius}" length="${body_height}"/>
      </geometry>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="${body_radius}" length="${body_height}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </inertial>
  </link>

  <!-- Define wheels -->
  <xacro:macro name="swerve_wheel" params="name x y yaw">
    <joint name="${name}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${name}_link"/>
      <origin xyz="${x} ${y} 0" rpy="0 0 ${yaw}"/>
      <axis xyz="0 0 1"/>
    </joint>

    <link name="${name}_link">
      <visual>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <material name="black">
          <color rgba="0 0 0 1"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
      </collision>
    </link>
  </xacro:macro>

  <!-- Front wheel -->
  <xacro:swerve_wheel name="front_wheel" x="0.051" y="0" yaw="0"/>
  <!-- Back right wheel (120 deg from front) -->
  <xacro:swerve_wheel name="rear_right_wheel" x="-0.0255" y="-0.0441" yaw="0"/>
  <!-- Back left wheel (240 deg from front) -->
  <xacro:swerve_wheel name="rear_left_wheel" x="-0.0255" y="0.0441" yaw="0"/>

  <!-- LIDAR -->
  <link name="lidar_link">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>
  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 ${lidar_height}" rpy="0 0 0"/>
  </joint>

  <!-- IMU -->
  <link name="imu_link">
    <visual>
      <geometry>
        <box size="0.02 0.02 0.01"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.01 -0.01 0.05" rpy="0 0 0"/>
  </joint>
</robot>

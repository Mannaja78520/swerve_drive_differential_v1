<?xml version="1.0"?>
<robot name="differential_swerve_bot" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:property name="wheel_radius" value="0.03"/>
  <xacro:property name="wheel_width" value="0.02"/>
  <xacro:property name="body_radius" value="0.0925"/>
  <xacro:property name="lidar_height" value="0.19"/>
  <xacro:property name="imu_offset_x" value="0.01"/>

  <!-- Main body -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="${body_radius}" length="0.1"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

  <!-- LIDAR -->
  <link name="lidar">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
      <origin xyz="0 0 ${lidar_height}" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>
  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar"/>
    <origin xyz="0 0 ${lidar_height}" rpy="0 0 0"/>
  </joint>

  <!-- IMU -->
  <link name="imu">
    <visual>
      <geometry>
        <box size="0.03 0.02 0.01"/>
      </geometry>
      <origin xyz="${imu_offset_x} 0 0.05" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu"/>
    <origin xyz="${imu_offset_x} 0 0.05" rpy="0 0 0"/>
  </joint>

  <!-- Wheels -->
  <xacro:macro name="swerve_wheel" params="prefix x y yaw">
    <link name="${prefix}_caster">
      <visual>
        <geometry>
          <cylinder radius="0.01" length="0.02"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <material name="red">
          <color rgba="1 0 0 1"/>
        </material>
      </visual>
    </link>

    <joint name="${prefix}_caster_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${prefix}_caster"/>
      <origin xyz="${x} ${y} 0.02" rpy="0 0 ${yaw}"/>
      <axis xyz="0 0 1"/>
    </joint>

    <link name="${prefix}_wheel">
      <visual>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <material name="black">
          <color rgba="0 0 0 1"/>
        </material>
      </visual>
    </link>

    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="${prefix}_caster"/>
      <child link="${prefix}_wheel"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <!-- Wheel positions -->
  <xacro:swerve_wheel prefix="front" x="0.051" y="0" yaw="0"/>
  <xacro:swerve_wheel prefix="rear_right" x="-0.0255" y="-0.0441" yaw="2.094"/>
  <xacro:swerve_wheel prefix="rear_left" x="-0.0255" y="0.0441" yaw="-2.094"/>

</robot>
